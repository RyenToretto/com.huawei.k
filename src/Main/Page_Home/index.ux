      <div class="bigDiv" onclick="route($item)">
        <image class="bigPic" src="{{data.swiper_image}}"></image>
      </div>
      <div class="smallDiv">
        <image class="smallPic1" src="{{data.swiper_image2.img}}" onclick="playVideo"></image>
        <image class="smallPic2" src="{{data.swiper_image3}}" onclick="showPlayList"></image>
      </div>
    </div>

    <div class="pngRowDiv">
      <div class="pngColumnDivLeft">
        <image class="mypng" src="{{data.history_image}}" onclick="showPlayHistory"></image>
        <text class="textAlign">播放历史</text>
      </div>
      <div class="pngColumnDiv" onclick="playList()">
        <image class="mypng" src="{{data.list_image}}"></image>
        <text class="textAlign">视频精选</text>
      </div>
      <div class="pngColumnDiv" onclick="route($item)">
        <image class="mypng" src="{{data.audio_image}}"></image>
