      <div class="pngColumnDivRight" onclick="playHearing()">
        <image class="mypng" src="{{data.listen_image}}"></image>
        <text class="textAlign">倾听目录</text>
      </div>
    </div>

    <div class="list1">
      <lists list="{{data.list1}}" banner="{{data.banner1}}"></lists>
    </div>
    <div class="list2">
      <lists list="{{data.list2}}" banner="{{data.banner2}}"></lists>
    </div>
    <div class="list3">
      <hotvideo list="{{data.list3}}" last="{{data.last}}" banner="{{data.banner3}}"></hotvideo>
    </div>
  </div>
</template>

