      router.push({
        uri: '/Page_Audio',
        params: { item: item }
      });
    },
    playVideo() {
      router.push({
        uri: '/Page_VideoDetail',
      });
    },
    playHearing() {
      router.push({
        uri: '/Page_Hearingcatalogue',
      });
    },
    showPlayList() {
