    margin-left: 11.52px;
    width: 24px;
    height: 48px;
  }

  .back_img,
  .shear_img {
    width: 48px;
    height: 48px;
  }

  .bookdetail-box-desc {
    padding: 32.64px 32.64px 0px 31.68px;
  }

  .bookdetail-box-one {
    margin: 16.32px 31.68px 10px 31.68px;
  }

  .bookdetail-box-two {
    margin-top: 14.4px;
  }

  .bookdetail-box-three {
    margin: 14.4px 0px 96px 0px;
  }

  .maintab-shadow-bottom {
    width: 100%;
    height: 96px;
  }

  .detail_bottom {
    position: fixed;
    background-color: #ffffff;
    height: 96px;
    width: 100%;
    padding: 0 32.64px;
    bottom: 0px;
    justify-content: space-between;
    align-items: center;
  }

  .bottom_left_btn {
    height: 64.32px;
    width: 303.36px;
    padding: 14.4px 0;
    color: #1a1a1a;
    font-size: 30px;
    text-align: center;
    border-radius: 9px;
    border: 1px solid #d4d4d4;
  }

  .bottom_right_btn {
    height: 64.32px;
    width: 303.36px;
    padding: 14.4px 0;
    color: #ffffff;
    font-size: 30px;
    background-color: #D00218;
